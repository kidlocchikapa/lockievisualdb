# PayChangu Environment Configuration

# Copy this file to .env in your backend directory and fill in your credentials

# PayChangu API Credentials
PAYCHANGU_SECRET_KEY=your_paychangu_secret_key_here
PAYCHANGU_WEBHOOK_SECRET=your_paychangu_webhook_secret_here
PAYCHANGU_CURRENCY=MWK

# URLs
CALLBACK_URL=http://localhost:3001/payment/verify
FRONTEND_URL=http://localhost:3000/dashboard

# For production, update these to your actual URLs:
# CALLBACK_URL=https://your-backend-domain.com/payment/verify
# FRONTEND_URL=https://your-frontend-domain.com/dashboard
